{
  "dashboard": {
    "title": "PrepChef Metrics",
    "tags": ["prepchef", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(prepchef_http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Request Latency (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(prepchef_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 {{route}}"
          },
          {
            "expr": "histogram_quantile(0.99, rate(prepchef_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 {{route}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Booking Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(prepchef_booking_success_total{status=\"confirmed\"}[5m])",
            "legendFormat": "Confirmed Bookings/sec"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Compliance Validations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(prepchef_compliance_validations_total[5m]))",
            "legendFormat": "Validations/sec"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 }
      },
      {
        "id": 5,
        "title": "Payment Intent Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (prepchef_payment_intents_total)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "prepchef_database_connections{state=\"active\"}",
            "legendFormat": "Active"
          },
          {
            "expr": "prepchef_database_connections{state=\"idle\"}",
            "legendFormat": "Idle"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 }
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(prepchef_http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors"
          },
          {
            "expr": "rate(prepchef_http_requests_total{status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 8,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(prepchef_process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 }
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "prepchef_process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 16 }
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
