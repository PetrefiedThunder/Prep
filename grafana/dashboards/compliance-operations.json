{
  "id": null,
  "title": "Compliance & Operations",
  "uid": "compliance-ops",
  "schemaVersion": 39,
  "version": 1,
  "timezone": "browser",
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "API Latency (p95)",
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(prep_api_request_latency_seconds_bucket{app=\"prep-api\"}[5m])) by (le))",
          "legendFormat": "p95 latency"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Insurance Sync Success Rate",
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(prep_integration_sync_success_total{integration=\"insurance\"}[5m]))",
          "legendFormat": "success"
        },
        {
          "expr": "sum(rate(prep_integration_sync_failures_total{integration=\"insurance\"}[5m]))",
          "legendFormat": "failures"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Active Delivery Kitchens",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 9},
      "targets": [
        {
          "expr": "sum(prep_active_delivery_kitchens)",
          "legendFormat": "Delivery Kitchens"
        }
      ],
      "options": {"reduceOptions": {"calcs": ["last"], "fields": ""}}
    },
    {
      "type": "timeseries",
      "title": "Deliveries per Hour",
      "gridPos": {"h": 9, "w": 16, "x": 8, "y": 9},
      "targets": [
        {
          "expr": "sum(rate(prep_deliveries_total[5m]))",
          "legendFormat": "deliveries"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Compliance Manifest Runs (24h)",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18},
      "targets": [
        {
          "expr": "sum(increase(prep_integration_sync_success_total{integration=\"insurance\"}[24h]))",
          "legendFormat": "insurance success"
        }
      ],
      "options": {"reduceOptions": {"calcs": ["last"], "fields": ""}}
    }
  ],
  "templating": {"list": []}
}
