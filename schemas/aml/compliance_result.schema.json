{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AMLComplianceResult",
  "type": "object",
  "required": [
    "x-schema-version",
    "domain",
    "risk_level",
    "sanction_matches",
    "suspicious_activities",
    "required_reports",
    "score"
  ],
  "properties": {
    "x-schema-version": {
      "type": "string",
      "const": "aml-compliance.v1"
    },
    "domain": {
      "type": "string",
      "const": "anti_money_laundering"
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "sanction_matches": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "suspicious_activities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_reports": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "additionalProperties": false
}
