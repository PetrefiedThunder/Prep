{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://prep.com/schemas/booking.v1.json",
  "title": "Booking",
  "description": "Guest booking/reservation entity",
  "type": "object",
  "required": [
    "booking_id",
    "facility_id",
    "vendor_id",
    "check_in",
    "check_out",
    "guest_count",
    "status",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "booking_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the booking"
    },
    "external_booking_id": {
      "type": "string",
      "description": "Booking ID from external platform (Airbnb, VRBO, etc.)"
    },
    "facility_id": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to the facility being booked"
    },
    "vendor_id": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to the vendor/owner"
    },
    "guest": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "guest_id": {
          "type": "string",
          "format": "uuid",
          "description": "Internal guest ID (if registered user)"
        },
        "external_guest_id": {
          "type": "string",
          "description": "Guest ID from external platform"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        },
        "verified": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "check_in": {
      "type": "string",
      "format": "date",
      "description": "Check-in date (YYYY-MM-DD)"
    },
    "check_out": {
      "type": "string",
      "format": "date",
      "description": "Check-out date (YYYY-MM-DD)"
    },
    "nights": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of nights (calculated from check-in/check-out)"
    },
    "guest_count": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Total number of guests"
    },
    "guest_breakdown": {
      "type": "object",
      "properties": {
        "adults": {
          "type": "integer",
          "minimum": 0
        },
        "children": {
          "type": "integer",
          "minimum": 0
        },
        "infants": {
          "type": "integer",
          "minimum": 0
        },
        "pets": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "pricing": {
      "type": "object",
      "required": ["currency", "subtotal", "total"],
      "properties": {
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "default": "USD",
          "description": "ISO 4217 currency code"
        },
        "nightly_rate": {
          "type": "number",
          "minimum": 0,
          "description": "Base nightly rate"
        },
        "subtotal": {
          "type": "number",
          "minimum": 0,
          "description": "Subtotal (nights Ã— rate)"
        },
        "cleaning_fee": {
          "type": "number",
          "minimum": 0
        },
        "service_fee": {
          "type": "number",
          "minimum": 0
        },
        "taxes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "rate", "amount"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Tax name (e.g., 'TOT', 'Sales Tax')"
              },
              "rate": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Tax rate as decimal (e.g., 0.14 for 14%)"
              },
              "amount": {
                "type": "number",
                "minimum": 0,
                "description": "Tax amount in currency"
              },
              "jurisdiction": {
                "type": "string",
                "description": "Taxing jurisdiction (e.g., 'City of Los Angeles')"
              }
            }
          }
        },
        "total_taxes": {
          "type": "number",
          "minimum": 0,
          "description": "Sum of all taxes"
        },
        "total": {
          "type": "number",
          "minimum": 0,
          "description": "Total amount due"
        },
        "discount": {
          "type": "number",
          "minimum": 0,
          "description": "Total discounts applied"
        }
      },
      "additionalProperties": false
    },
    "payment": {
      "type": "object",
      "properties": {
        "payment_status": {
          "type": "string",
          "enum": [
            "pending",
            "authorized",
            "captured",
            "partially_refunded",
            "refunded",
            "failed",
            "cancelled"
          ]
        },
        "payment_intent_id": {
          "type": "string",
          "description": "Stripe PaymentIntent ID"
        },
        "payment_method": {
          "type": "string",
          "enum": ["card", "bank_transfer", "external_platform"]
        },
        "paid_amount": {
          "type": "number",
          "minimum": 0
        },
        "paid_at": {
          "type": "string",
          "format": "date-time"
        },
        "refunded_amount": {
          "type": "number",
          "minimum": 0
        },
        "refunded_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "compliance": {
      "type": "object",
      "properties": {
        "compliant": {
          "type": "boolean",
          "description": "Whether booking meets all compliance requirements"
        },
        "checked_at": {
          "type": "string",
          "format": "date-time"
        },
        "checks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["rule_id", "passed"],
            "properties": {
              "rule_id": {
                "type": "string",
                "description": "Compliance rule identifier"
              },
              "rule_name": {
                "type": "string"
              },
              "passed": {
                "type": "boolean"
              },
              "details": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["blocking", "warning", "info"]
              }
            }
          }
        },
        "blocking_issues": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of issues preventing booking approval"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": [
        "inquiry",
        "requested",
        "pending_approval",
        "confirmed",
        "checked_in",
        "checked_out",
        "cancelled",
        "no_show",
        "completed"
      ]
    },
    "cancellation": {
      "type": "object",
      "properties": {
        "cancelled_by": {
          "type": "string",
          "enum": ["guest", "host", "admin", "system"]
        },
        "cancelled_at": {
          "type": "string",
          "format": "date-time"
        },
        "cancellation_reason": {
          "type": "string"
        },
        "cancellation_policy": {
          "type": "string",
          "enum": ["flexible", "moderate", "strict", "super_strict"]
        },
        "refund_amount": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "source": {
      "type": "string",
      "enum": ["direct", "airbnb", "vrbo", "booking_com", "expedia", "other"],
      "description": "Booking source/channel"
    },
    "special_requests": {
      "type": "string",
      "maxLength": 2000,
      "description": "Guest special requests or notes"
    },
    "internal_notes": {
      "type": "string",
      "maxLength": 5000,
      "description": "Internal notes (not visible to guest)"
    },
    "metadata": {
      "type": "object",
      "description": "Custom key-value metadata",
      "additionalProperties": {
        "type": "string"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "deleted_at": {
      "type": ["string", "null"],
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
