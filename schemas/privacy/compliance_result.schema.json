{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PrivacyComplianceResult",
  "type": "object",
  "required": [
    "x-schema-version",
    "domain",
    "overall_compliance",
    "checks",
    "required_actions",
    "summary"
  ],
  "properties": {
    "x-schema-version": {
      "type": "string",
      "const": "privacy-compliance.v1"
    },
    "domain": {
      "type": "string",
      "const": "privacy_regulations"
    },
    "overall_compliance": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "required_actions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "summary": {
      "type": "string"
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "passed",
          "severity",
          "details",
          "remediation"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "passed": {
            "type": "boolean"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "details": {
            "type": "string"
          },
          "remediation": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
