[Unit]
Description=Prep Database Backup Timer
Requires=prep-backup.service

[Timer]
# Run daily at 2:00 AM
OnCalendar=*-*-* 02:00:00
# Randomize start time by up to 30 minutes to avoid thundering herd
RandomizedDelaySec=1800
# Persist timer across reboots
Persistent=true
# Start as soon as possible if we missed the scheduled time
AccuracySec=1min

[Install]
WantedBy=timers.target
