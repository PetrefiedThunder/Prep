[Unit]
Description=Prep Database Backup Service
After=network.target postgresql.service

[Service]
Type=oneshot
User=prep
Group=prep
EnvironmentFile=/etc/prep/backup.env
ExecStart=/opt/prep/scripts/backup_database.sh --mode full
TimeoutStartSec=3600
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/backup/prep /tmp

[Install]
WantedBy=multi-user.target
