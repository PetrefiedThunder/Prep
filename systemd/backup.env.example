# Prep Database Backup Configuration
# Copy to /etc/prep/backup.env and update with your values

# Database connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prepchef

# S3/MinIO storage
S3_BUCKET=prep-backups
S3_ENDPOINT=s3.amazonaws.com
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1

# Backup retention (in days)
RETENTION_DAYS=30
RETENTION_WEEKLY_WEEKS=12
RETENTION_MONTHLY_MONTHS=12

# Local backup directory
BACKUP_DIR=/var/backup/prep

# Encryption (optional)
# BACKUP_ENCRYPTION_KEY=your-encryption-key

# Notification webhook (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
