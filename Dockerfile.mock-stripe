FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    pydantic==2.5.0

# Copy mock server
COPY mocks/stripe_mock.py /app/stripe_mock.py

# Expose port
EXPOSE 8001

# Run mock server
CMD ["python", "stripe_mock.py"]
