{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://prep.com/schemas/federal/accreditation_body.schema.json",
  "title": "Accreditation Body",
  "description": "FDA-recognized accreditation body authorized to accredit third-party certification bodies",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the accreditation body",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "description": "Official name of the accreditation body",
      "minLength": 1,
      "maxLength": 255
    },
    "url": {
      "type": ["string", "null"],
      "description": "Official website URL",
      "format": "uri"
    },
    "email": {
      "type": ["string", "null"],
      "description": "Contact email address",
      "format": "email"
    },
    "contact": {
      "type": ["string", "null"],
      "description": "Primary contact person or department",
      "maxLength": 255
    }
  },
  "required": ["id", "name"],
  "additionalProperties": false
}
