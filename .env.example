# Prep platform environment configuration
# Copy this file to `.env` and adjust values for your local setup.

# Runtime environment: one of development, staging, production
ENVIRONMENT=development

# PostgreSQL connection string using asyncpg driver
DATABASE_URL=postgresql+asyncpg://prep:prep@localhost:5432/prep
# Optional overrides for SQLAlchemy connection pooling
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800

# Redis URL for session and cache storage
REDIS_URL=redis://localhost:6379/0
SESSION_TTL_SECONDS=3600

# JWT / authentication configuration
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Logging configuration
LOG_LEVEL=INFO
